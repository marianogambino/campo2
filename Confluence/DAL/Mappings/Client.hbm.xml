<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Domain">
  <class name="Confluence.Domain.Client" table="clients">
    <id name="Id">
      <generator class="identity"/>
    </id>
    <many-to-one name="UserAccount"
                 class="Confluence.Domain.User"
                 column="user_account"
                 cascade="all"
                 lazy="false"
                 unique="true"/>
    <bag  name="WorkXP" 
          generic="true"
          lazy="false"
          cascade="all" inverse="true">
      <key column="client_id"/>
      <one-to-many class="Confluence.Domain.WorkXP"/>
    </bag>
    
    <bag  name="Study" 
          generic="true"
          lazy="false"
          cascade="all" inverse="true">
      <key column="client_id"/>
      <one-to-many class="Confluence.Domain.Study"/>
    </bag>
    
    <property name="Name" />
    <property name="Country" />
    <property name="State" />
    <property name="Phone" />
    <property name="DV" column="DVH" />
  </class>
</hibernate-mapping>

